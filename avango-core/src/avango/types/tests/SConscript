Import('avango_test_env')

tests = []

test_lib_type = avango_test_env.Program(Split('TestLibType.cpp TestType.cpp'))
tests += avango_test_env.Alias('test-core-types-lib-type', test_lib_type,
                               "${SOURCE.abspath}")

test_container_pool = avango_test_env.Program('TestContainerPool', 'TestContainerPool.cpp')
tests += avango_test_env.Alias('test-core-types-container-pool', test_container_pool,
                               "${SOURCE.abspath}")

AlwaysBuild(tests)
Alias('check-core', Alias('check-core-types', tests))
