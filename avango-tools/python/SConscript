import avango.build
import avango.build.oshelper

avango.build.Environment.prepend_python_path(Dir('.').abspath)
module_env = avango.build.PythonEnvironment()
avango.build.add_library(module_env, 'boost_python')
avango.build.add_library(module_env, 'avango-core')
avango.build.add_library(module_env, 'avango-python')
if avango.build.oshelper.os_is_windows():
  avango.build.add_library(module_env, 'avango-python-script')
module_env.Prepend(LIBS="avangoTools")

Alias('install-tools', avango.build.get_python_path('avango'))

tools_files = Split("""
    avango/tools/_tools.cpp
    avango/tools/Selectors.cpp
    avango/tools/ScriptTool.cpp
    """)

if avango.build.Environment()['OPENSCENEGRAPH_SUPPORT']:
    tools_files += Split('''
        avango/tools/OSGTools.cpp
        ''')

tools_lib = module_env.SharedLibrary("avango/tools/_tools", tools_files)
tools_module = Alias('tools-python', [
    tools_lib,
    File("avango/tools/__init__.py"),
    ])
module_env.Install(avango.build.get_python_path('avango/tools'), "avango/tools/__init__.py")
module_env.Install(avango.build.get_python_path('avango/tools'), tools_lib)
Alias('tools', tools_module)
