import avango.build

Import('examples_dir')

files = Split('''
              desktopflyer-test.py
              ''')

images = Split('''
              Images/lzsnow.jpg
              Images/skymap.jpg
              Images/tank.rgb
              Images/treesnow.png
              ''')

models = Split('''
              Models/lzsnow.osg
              ''')

Alias('install-examples', Install(examples_dir.abspath + '/desktop-flyer', files))
Alias('install-examples', Install(examples_dir.abspath + '/desktop-flyer/Images', images))
Alias('install-examples', Install(examples_dir.abspath + '/desktop-flyer/Models', models))
